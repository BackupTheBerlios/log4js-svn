       <release version="0.2.0-dev" date="unreleased">
            <notes>
                <section>
                    <title></title>
                    <p>
                    </p>
                </section>
            </notes>
            <action dev="ssr" type="add" context="code" importance="medium"> 
                Layout added to support different Layouts of logging output.
            </action>
            <action dev="ssr" type="add" context="code" importance="medium"> 
